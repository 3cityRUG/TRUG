<!DOCTYPE html>
<html>
  <head>
    <title>TRUG Admin</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tag %>
    <%= stylesheet_link_tag "admin", "data-turbo-track": "reload" %>
  </head>
  <body>
    <div class="admin-layout">
      <header class="admin-header">
        <nav class="admin-nav">
          <%= link_to "TRUG Admin", admin_root_path, class: "admin-brand" %>
          <div class="admin-nav-links">
            <%= link_to "Dashboard", admin_root_path, class: ("active" if current_page?(admin_root_path)) %>
            <%= link_to "Spotkania", admin_meetups_path, class: ("active" if controller_name == "meetups") %>
            <%= link_to "Prezentacje", admin_talks_path, class: ("active" if controller_name == "talks") %>
            <%= button_to "Wyloguj", session_path, method: :delete %>
          </div>
        </nav>
      </header>

      <main class="admin-main">
        <% if notice = flash[:notice] %>
          <div class="admin-notice"><%= notice %></div>
        <% end %>
        <% if alert = flash[:alert] %>
          <div class="admin-alert"><%= alert %></div>
        <% end %>

        <%= yield %>
      </main>
    </div>
  </body>
</html>
