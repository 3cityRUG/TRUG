<%# Edit Talk %>
<nav class="breadcrumbs" aria-label="Nawigacja">
  <%= link_to "Dashboard", admin_root_path %>
  <span class="breadcrumbs-separator">/</span>
  <%= link_to "Spotkania", admin_meetups_path %>
  <span class="breadcrumbs-separator">/</span>
  <%= link_to "Spotkanie ##{@talk.meetup.number}", admin_meetup_path(@talk.meetup) %>
  <span class="breadcrumbs-separator">/</span>
  <span class="breadcrumbs-current">Edycja prezentacji</span>
</nav>

<div class="page-header">
  <h1 class="page-title">Edycja prezentacji</h1>
  <p class="page-subtitle"><%= @talk.title %> - <%= @talk.speaker_name %></p>
</div>

<div class="card">
  <div class="card-body">
    <%= form_with model: [:admin, @talk.meetup, @talk], local: true, class: "form" do |f| %>
      <%= render "form", talk: @talk, meetup: @talk.meetup, f: f %>
    <% end %>
  </div>
</div>
