<%# New Talk %>
<nav class="breadcrumbs" aria-label="Nawigacja">
  <%= link_to "Dashboard", admin_root_path %>
  <span class="breadcrumbs-separator">/</span>
  <%= link_to "Spotkania", admin_meetups_path %>
  <span class="breadcrumbs-separator">/</span>
  <%= link_to "Spotkanie ##{@meetup.number}", admin_meetup_path(@meetup) %>
  <span class="breadcrumbs-separator">/</span>
  <span class="breadcrumbs-current">Nowa prezentacja</span>
</nav>

<div class="page-header">
  <h1 class="page-title">Nowa prezentacja</h1>
  <p class="page-subtitle">Spotkanie #<%= @meetup.number %> - <%= l @meetup.date, format: :long %></p>
</div>

<div class="card">
  <div class="card-body">
    <%= form_with model: [:admin, @meetup, @talk], local: true, class: "form" do |f| %>
      <%= render "form", talk: @talk, meetup: @meetup, f: f %>
    <% end %>
  </div>
</div>
