<div class="admin-form">
  <h1>Nowe spotkanie</h1>

  <%= form_with model: [:admin, @meetup], local: true do |f| %>
    <% if @meetup.errors.any? %>
      <div class="form-errors">
        <ul>
          <% @meetup.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :number, "Numer spotkania" %>
      <%= f.number_field :number, required: true, value: @meetup.number %>
    </div>

    <div class="form-group">
      <%= f.label :date, "Data" %>
      <%= f.date_field :date, required: true %>
    </div>

    <div class="form-group">
      <%= f.label :description, "Opis" %>
      <%= f.text_area :description %>
    </div>

    <div class="form-actions">
      <%= f.submit "UtwÃ³rz spotkanie", class: "btn btn-primary" %>
      <%= link_to "Anuluj", admin_meetups_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>
